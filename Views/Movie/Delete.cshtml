@model aspnet_exam_movie.Models.Entities.Movie

@{
    ViewBag.Title = "Delete: " + @Model.MovieTitle;
}

<h3>Are you sure you want to delete this movie?</h3>

<form asp-controler="Movie" asp-action="Delete" method="POST" class="form-horizontal">
    <input class="form-control" type="hidden" asp-for="MovieItemID">
    <div class="form-group">
        <div class="col-md-offset-0 col-md-4">
            <a class="btn btn-danger" asp-controller="Movie" asp-action="Index">No</a>
            <button type="submit" class="btn btn-success">Yes</button>
        </div>
    </div>
</form>