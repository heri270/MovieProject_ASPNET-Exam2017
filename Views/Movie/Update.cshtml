@model IEnumerable<aspnet_exam_movie.Models.Entities.Movie>
    @{
        ViewBag.Title = "Edit a Movie";
    }

<form asp-controler="Student" asp-action="Update" method="POST" class="form-horizontal">
    @Html.Partial("_MovieForm")

    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <a class="btn btn-danger" asp-controller="Movie" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
</form>